<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Item_RestaurantListRv_Root"
        android:layout_marginBottom="@dimen/dimen_MM">

        <ImageView
            android:id="@+id/Item_RestaurantListRv_RestaurantIv"
            android:layout_width="@dimen/dimen_H"
            android:layout_height="@dimen/dimen_H"
            android:layout_alignParentStart="true"
            android:scaleType="center"
            android:layout_marginStart="@dimen/dimen_MM"
            android:layout_marginTop="@dimen/dimen_MMM"
            android:layout_marginEnd="@dimen/dimen_MMM"
             />

        <LinearLayout
            android:id="@+id/Item_RestaurantListRv_RestaurantTitleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_MMM"
            android:layout_toEndOf="@id/Item_RestaurantListRv_RestaurantIv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Item_RestaurantListRv_RestaurantTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/Item_RestaurantListRv_RestaurantIv"
                android:text=""
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Item_RestaurantListRv_RestaurantCategoryTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_S"
                android:text=""
                android:textSize="@dimen/txt_size_s" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="1"
                android:layout_marginTop="@dimen/dimen_MMM"
                android:id="@+id/Item_RestaurantListRv_RatingBar"
                style="@android:style/Widget.Material.RatingBar.Small"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_MMM"
            android:layout_marginEnd="@dimen/dimen_S"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Item_RestaurantListRv_OpenTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dimen_MMM"
                android:layout_marginTop="@dimen/dimen_MMM"
                android:layout_marginEnd="@dimen/dimen_MM"
                android:drawableEnd="@drawable/ic_verfied"
                android:text="@string/open_now"

                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_MMM"
                android:layout_marginStart="@dimen/dimen_S"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Item_RestaurantListRv_MinRequestTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/min_request"
                    android:textSize="@dimen/txt_size_ss"
                    />


                <TextView
                    android:id="@+id/Item_RestaurantListRv_MinRequestTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_MMM"
                    android:paddingEnd="@dimen/dimen_MMM"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/txt_size_ss"
                    ></TextView>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_S"
                android:layout_marginStart="@dimen/dimen_S"
                android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Item_RestaurantListRv_DeliveryCommsionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_commision"
                    android:textSize="@dimen/txt_size_ss" />

                <TextView
                    android:id="@+id/Item_RestaurantListRv_DeliveryCommsionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_MMM"
                     android:paddingEnd="@dimen/dimen_MMM"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/txt_size_ss" />
            </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>