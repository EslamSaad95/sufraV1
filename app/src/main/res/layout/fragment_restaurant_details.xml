<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RequestFood.Fragment.RestaurantDetailsCycle.RestaurantDetails">

<include layout="@layout/item_restaurantlist_recyleview"
    android:id="@+id/RestaurantDetailsFr_RestaurantLayout"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/RestaurantDetailsFr_TabLayout"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/RestaurantDetailsFr_RestaurantLayout"
        app:tabGravity="fill"
        android:textAlignment="center"
        app:tabIndicatorColor="@android:color/holo_orange_dark"
        app:tabMode="fixed"
        app:tabTextColor="#000"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RestaurantDetailsFr_ViewPager"
        android:layout_below="@id/RestaurantDetailsFr_TabLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        ></android.support.v4.view.ViewPager>
</RelativeLayout>