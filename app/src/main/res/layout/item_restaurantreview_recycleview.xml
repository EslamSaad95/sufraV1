<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/cardview_borders"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_MM"
        android:layout_marginEnd="@dimen/dimen_MM"
       >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/Item_RestaurantReviewRv_UserNameTv"
        android:layout_marginTop="@dimen/dimen_MMM"
        android:text=""/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3"
        android:layout_marginTop="@dimen/dimen_MMM"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_MM"
        android:id="@+id/Item_RestaurantReviewRv_RatingBar"
        style="@android:style/Widget.Material.RatingBar.Small"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/Item_RestaurantReviewRv_DateTv"
        android:layout_below="@id/Item_RestaurantReviewRv_RatingBar"
        android:layout_marginTop="@dimen/dimen_S"
        android:layout_marginEnd="@dimen/dimen_MM"
        android:layout_alignParentEnd="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Item_RestaurantReviewRv_DateTv"
        android:layout_marginTop="@dimen/dimen_S"
        android:layout_marginBottom="@dimen/dimen_MM"
        android:id="@+id/ItemRestaurantReviewRv_ReviewDetailTv"
        android:text=""/>

    </RelativeLayout>





</RelativeLayout>