<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="YellowBtn">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginStart">@dimen/dimen_MM</item>
        <item name="android:layout_marginEnd">@dimen/dimen_MM</item>

    </style>
    <style name="BlackOrangeBtn">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_MM</item>
        <item name="android:layout_marginEnd">@dimen/dimen_MM</item>
        <item name="android:textSize">@dimen/txt_size_s</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_marginStart">@dimen/dimen_MM</item>
        <item name="android:layout_marginEnd">@dimen/dimen_MM</item>
        <item name="android:paddingStart">@dimen/dimen_MMM</item>
        <item name="android:paddingEnd">@dimen/dimen_MMM</item>
        <item name="android:background">@drawable/white_rectangle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_XL</item>
    </style>




    <style name="GreenButton">
        <item name="android:layout_marginEnd">@dimen/dimen_MM</item>
        <item name="android:layout_marginStart">@dimen/dimen_MM</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
